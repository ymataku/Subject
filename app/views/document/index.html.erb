<section>
    <div class="container" style="margin-top:5%;">
        <div class="tabs">
            <ul>
                <li id="all"><%=link_to "All",document_index_path(content:params[:content],group:"all")%></li>
                <li id="difficult"><%=link_to "重要",document_index_path(content:params[:content],group:"difficult")%></li>
                <li id="medium"><%=link_to "普通",document_index_path(content:params[:content],group:"medium")%></li>
                <li id="easy"><%=link_to "そんなに",document_index_path(content:params[:content],group:"easy")%></li>
            </ul>
        </div>
        <article class="panel is-primary">
            <% @document.each do |d|%>
                <div class="panel-block">
                    <span class="panel-icon">
                        <ion-icon name="bookmark-outline"></ion-icon>
                    </span>
                    <%= link_to d.title,document_path(d.id)%>
                </div>
            <%end%>
        </article>
    </div>
    <%= link_to '新規作成' ,new_document_path(content:params[:content]) %>
</section>

<script>
    elements = document.getElementsByTagName("li");
    var serch = location.search
    var param = serch.split('&')
    if(param.length == 1){
        elements[0].className = "is-active"
    }else{
        var paramArray  = param[1].split('=')[1]
        if(paramArray){
            for(let i=0;i<4;i++){
                if(paramArray == elements[i].id){
                    elements[i].className = "is-active"
                }      
            }
        }
    }
</script>