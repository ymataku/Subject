
<section class="hero is-success">
<div class="hero-body">
  <p class="title">
    教科作成
  </p>
  <p class="subtitle">
    作成する教科の名前とテストの有無を入力してください。
  </p>
</div>
</section>

<section class="container" style="margin-top:5%;">
  <div class="colums is-centered">
      <%= form_for @subject,url:subject_path do |f|%>
          <%= f.hidden_field :username,:value => current_user.name %>
            <div class = "field">
                <%=f.label:教科名,class:"label"%>
                <p class="control has-icons-left">
                    <%=f.text_field:subjectname,class:"input"%>
                    <span class="icon is-small is-left">
                        <ion-icon name="book-outline"></ion-icon>
                    </span>
                </p>
            </div>
            <div class = "field" style="margin-top:3%;">
                <%=f.label:test,class:"label"%>
                    <%=f.select:test, [['あり',0],['なし',1]], { include_blank: false, selected: 0 } %>
            </div>
            <div class="buttons" style="margin-top:3%;">
                <%= f.submit "更新", class:"button is-info"%>
            </div>
      <%end%>
  </div>
</section>